 @charset "utf-8";
 html,
 body {
     height: 100%;
 }
 
 body {
     /* background: url(../img/board_bg.png) no-repeat; */
     background-size: 100% 100%;
 }
 
 /*设置标题*/
 .brand-til-set {
     box-sizing: border-box;
     width: 100%;
     height: 70px;
     padding: 0 10px;
     line-height: 70px;
     background: #1f2946;
     background: rgba(232,238,252,.1);
     font-size: 16px;
 }
 .brand-til-set-input {
     width: 360px;
     color: #fff;
 }
 /*placeholder*/
 input.brand-til-set-input::-webkit-input-placeholder {
     font-size: 16px;
     color:#fff;
  }
 @media only screen and (max-width:1440px ){
     .brand-til-set {
         height: 60px;
         line-height: 60px;
         font-size: 14px;
     }
     .brand-til-set-input {
         width: 280px;
     }
     input.brand-til-set-input::-webkit-input-placeholder {
         font-size: 14px;
         color:#fff;
      }
 }
 
 /*模块列表*/
 .brand-list {
     width: 100%;
     height: 620px;
     margin-top: 10px;
     overflow-y: auto;
 }
 
 /*头部标题和时间标题媒体查询*/
 @media only screen and (max-height:900px ) {
     .brand-list {
         height: 540px;
     }
 }
 @media only screen and (max-height:800px ) {
     .brand-list {
         height: 510px;
     }
 }
 @media only screen and (max-height:768px ){
     .brand-list {
         height: 430px;
     }
 }
 @media only screen and (max-height:720px ){
     .brand-list {
         height: 400px;
     }
 }
 
 .brand-list .brand-list-item  {
     float: left;
     width: calc(25% - 18px);
     height: 180px;
     margin-right: 20px;
     margin-bottom: 20px;
     border: 1px solid #69e1ff;
 }
 .brand-list .brand-list-item:nth-of-type(4n)  {
     margin-right: 0;
 }
 
 .brand-list .brand-list-til {
     position: relative;
     width: 100%;
     height: 46px;
     line-height: 46px;
     font-size: 20px;
     font-weight: bold;
     background: rgba(232,238,252,.2);
     color: #fff;
 }
 .brand-list-til-txt {
     margin-left: 15px;
 }
 .brand-list-til-checkbox {
     position: absolute;
     top: 50%;
     right: 10px;
     transform: translateY(-50%);
 }
 .brand-list-con {
     box-sizing: border-box;
     width: 100%;
     height: 134px;
     position: relative;
     padding: 20px 15px 40px 15px;
     font-size: 14px;
     color: #fff;
 }
 
 .brand-list-con-set {
     position: absolute;
     z-index: 9;
     bottom: 20px;
     right: 15px;
     color: #69e1ff;
     font-size: 16px;
 }
 
 .brnad-wrap-btms {
     position: fixed;
     z-index: 9;
     bottom: 30px;
     right: 30px;
 }
 /*按钮*/
 .brnad-set-btn {
     width: 128px;
     height: 40px;
     margin-right: 10px;
     border: 1px solid #69e1ff;
     border-radius: 4px;
     background: #121736;
     background: transparent;
     font-size: 18px;
     color: #69e1ff;
     background: #050b2b;
 }
 .brnad-set-btn:hover{
  box-shadow: 0 0 20px rgba(105,225,255,.5) !important;
 }
 
 @media only screen and (max-width:1440px ){
     .brand-list .brand-list-item  {
         height: 160px;
     }
     .brand-list .brand-list-til {
         height: 35px;
         line-height: 35px;
         font-size: 16px;
     }
     .brand-list-con{
         height: 125px;
         font-size: 14px;
     }
     .brand-list-con-set {
         font-size: 13px;
     }
     .brnad-set-btn {
         width: 100px;
         height: 35px;
         font-size: 14px;
     }
 }
 @media only screen and (max-width:1360px ){
     .brand-list .brand-list-item  {
         height: 150px;
     }
     .brand-list .brand-list-til {
         height: 35px;
     }
     .brand-list-con{
         height: 115px;
         font-size: 12px;
     }
     .brand-list-con-set {
         bottom: 10px;
     }
 }
 @media only screen and (max-width:1024px ){
     .brand-list .brand-list-item  {
         height: 130px;
     }
     .brand-list .brand-list-til {
         height: 30px;
         line-height: 30px;
         font-size: 14px;
     }
     .brand-list-con{
         height: 100px;
         font-size: 11px;
     }
 }