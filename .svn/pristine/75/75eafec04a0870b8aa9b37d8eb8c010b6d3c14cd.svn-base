<!-- <sui-validator [sui-validator] > -->
    <div  class="login-box-wrap"  [suikeyboard]>
        <div class="login-box">
            <div class="login-box-title" data-text="智店宝大数据监控平台">智店宝大数据监控平台</div>
            <div class="login-box-list">
                <div class="form-login active">
                    <label class="label-login">
                        <i class="login_icon_phone"></i>
                    </label>
                    <input class=" input-login" 
                           customTabindex="1" 
                           type="text" 
                           placeholder="请输入手机号、帐号" [suiRules]="mobileValidator" [(ngModel)]="UserInfo.userMobile">
                </div>
                <div class="form-login active">
                    <label class="label-login">
                        <i class="login_icon_code"></i>
                    </label>
                    <input class="input-login input-login-code " customTabindex="2" [(ngModel)]="UserInfo.validcode" type="text" placeholder="请填验证码">
                    <button type="button" class="btn-code" [disabled]="isDisabled" (click)="getViewCode()">
                        {{sendCodeMsg}}
                    </button>
                </div>
                <div class="form-login active">
                    <label class="label-login">
                        <i class="login_icon_key"></i>
                    </label>
                    <input class="input-login" type="text" customTabindex="3" placeholder="请输入登录密码" [(ngModel)]="UserInfo.pswd">
                </div>
                <p class="form-check" style="display: none;">
                    请输入正确账号/请输入正确密码
                </p>
                <button type="button" class="btn-login" (click)="login()">登 录</button>
            </div>
        </div>
    </div>
<!-- </sui-validator> -->